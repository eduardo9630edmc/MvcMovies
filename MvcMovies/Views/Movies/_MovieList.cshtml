@model IEnumerable<MvcMovies.Models.Movie>


<table class="table table-striped table-bordered table-sm">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td width="15%">
                    <button data-model="@Newtonsoft.Json.JsonConvert.SerializeObject(item)" class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#editModal" onclick="editMovie(this)">Editar</button>
                    <button data-model="@Newtonsoft.Json.JsonConvert.SerializeObject(item)" class="btn btn-outline-danger btn-sm" onclick="deleteMovie(this)">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>